---
const {
  id,
  type = 'fractalNoise',
  frequency = '1',
  octaves = '1',
} = Astro.props;
---

<svg class="h-0 w-0">
  <filter id={id}>
    <feTurbulence
      type={type}
      baseFrequency={frequency}
      numOctaves={octaves}
      stitchTiles="stitch"
    >
    </feTurbulence>
  </filter>
</svg>
